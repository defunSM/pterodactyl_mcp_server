# Pterodactyl MCP Server Configuration
# Copy this file to .env and update with your values

# Required: Your Pterodactyl panel URL
PTERODACTYL_PANEL_URL=https://panel.example.com

# API Keys (at least one is required)
# Client API key for user-level operations (server management, files, etc.)
PTERODACTYL_CLIENT_API_KEY=your_client_api_key_here

# Application API key for admin-level operations (user management, all servers, nodes)
PTERODACTYL_APPLICATION_API_KEY=your_application_api_key_here

# Optional: Request timeout in seconds (default: 30)
PTERODACTYL_TIMEOUT=30

# Optional: Verify SSL certificates (default: true)
# Set to false if using self-signed certificates
PTERODACTYL_VERIFY_SSL=true